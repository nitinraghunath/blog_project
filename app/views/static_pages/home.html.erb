<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  
   <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
<% else %>
<div class="center hero-unit">
    <h1>Collector's Exchange</h1>
    <p>
      Show off your collections to the world. Be it baseball cards or action figures, you know you want the world to see it. Please sign-up to be able to create galleries.
      
    </p>
  <%= link_to "Sign up now!", signup_path, class: "btn btn-max btn-success btn-primary" %>
</div>
<% end %>
